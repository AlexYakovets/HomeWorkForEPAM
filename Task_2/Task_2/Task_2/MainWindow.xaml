        <Button x:Name="calculate" Content="Calculate" HorizontalAlignment="Left" Height="23" Margin="74,130,0,0" VerticalAlignment="Top" Width="120" Click="calculate_Click"/>
        <RichTextBox x:Name="richTextBox" HorizontalAlignment="Left" Height="111" Margin="199,42,0,0" VerticalAlignment="Top" VerticalScrollBarVisibility="Visible" Width="465">
