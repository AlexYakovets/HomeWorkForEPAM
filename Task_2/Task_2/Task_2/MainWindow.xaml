                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <Label x:Name="label2" Content="" HorizontalAlignment="Left" Height="23" Margin="208,172,0,0" VerticalAlignment="Top" Width="456"/>
        <Button x:Name="button" Content="Convert to binary code" HorizontalAlignment="Left" Margin="46,200,0,0" VerticalAlignment="Top" Width="148" Click="button_Click"/>

    </Grid>
</Window>
